var flashMessages = $('.flash-messages');
flashMessages.empty();

<% if flash[:error].present? %>
  flashMessages.html('<%= flash_messages(flash[:error]) %>');
<% else %>
  flashMessages.html('<%= flash_messages(flash[:success]) %>');
  $('li#answer-<%= @answer.id %>').fadeOut('1000')
<% end %>
<% flash.discard %>