- if answer.persisted?
  li.list-group-item data= {answer_id:"#{answer.id}"} id="answer-#{answer.id}"
    .row
      .col-xs-2.col-md-1
        img.img-circle.img-responsive[src="http://placehold.it/80" alt=""]
      .col-xs-10.col-md-11
        div
          a[href="#link_to_somewhere"]
            |  Google Style comment with bootstrap
          .mic-info
            |  By:
            a[href="#"]
              = answer.user.username
            '
            = answer.created_at
        .comment-text
          =answer.body
        -if user_signed_in? && current_user.author_of?(answer)
          .action.answer_control_btns
            .btn-group.btn-group-xs
              =link_to [@question, answer], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' }
                = icon('trash')
                '  Delete answer
              =link_to edit_question_answer_path(@question, answer), remote: true, class: 'btn btn-warning' do
                = icon('pencil')
                '  Edit answer
    div class="form_for_answer-#{answer.id}"