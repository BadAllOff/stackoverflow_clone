li.list-group-item.text-center.votes_answer
  span class=((votable.votes.rating < 0) ? 'text-danger' : 'text-primary')
    = votable.votes.rating
    '
    =icon('star')
  hr
  - if can? :vote, votable
    .btn-group-vertical
      - if user_signed_in? && current_user.voted_for?(votable)
        =link_to unvote_answer_path(votable),
                 method: :patch,
                 remote: true,
                 data: { format: :json },
                 class: 'btn btn-warning vote_unvote'
          =icon('history')
          |  Unvote
      -else
        =link_to upvote_answer_path(votable),
                 method: :patch,
                 remote: true,
                 data: { format: :json },
                 class: 'btn btn-info vote_up'
          =icon('thumbs-o-up')
          |  Vote Up
        =link_to downvote_answer_path(votable),
                 method: :patch,
                 remote: true,
                 data: { format: :json },
                 class: 'btn btn-danger vote_down'
          =icon('thumbs-o-down fa-flip-horizontal')
          |  Vote Down