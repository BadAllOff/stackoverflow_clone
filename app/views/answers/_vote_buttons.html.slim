li.list-group-item.text-center.votes_answer
  span.text-primary
    = answer.votes.rating
    '
    =icon('star-half-o')
  hr
  - if can? :crud, answer
    .btn-group-vertical
      - if current_user.voted_for?(answer)
        =link_to unvote_answer_path(answer),
                 method: :patch,
                 remote: true,
                 data: { format: :json },
                 class: 'btn btn-warning vote_unvote'
          =icon('history')
          |  Unvote
      -else
        =link_to upvote_answer_path(answer),
                 method: :patch,
                 remote: true,
                 data: { format: :json },
                 class: 'btn btn-info vote_up'
          =icon('thumbs-o-up')
          |  Vote Up
        =link_to downvote_answer_path(answer),
                 method: :patch,
                 remote: true,
                 data: { format: :json },
                 class: 'btn btn-danger vote_down'
          =icon('thumbs-o-down fa-flip-horizontal')
          |  Vote Down