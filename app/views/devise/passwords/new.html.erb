<div class="container">
  <div class="card card-container">
    <h3>Forgot your password?</h3>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'form-signin') do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-primary btn-block btn-signin" %>
      </div>
    <% end %>
    <hr class="colorgraph" />
    <%= render "devise/shared/links" %>
  </div>
</div>