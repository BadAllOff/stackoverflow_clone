<div class="container">
  <div class="card card-container">
    <h3>Resend confirmation instructions</h3>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }, class: 'form-signin') do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      </div>

      <div class="actions">
        <%= f.submit "Resend confirmation instructions" %>
      </div>
    <% end %>
    <hr class="colorgraph" />
    <%= render "devise/shared/links" %>
  </div>
</div>
